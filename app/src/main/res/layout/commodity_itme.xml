<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cart_bg"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/commodity"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imageView"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder_map" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commodity"
        android:layout_alignStart="@+id/commodity"
        android:layout_alignEnd="@+id/commodity"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ff333333"
        android:textSize="14sp"
        tools:text="裙子套装" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="12dp"
        android:text="@string/_1000f"
        android:textColor="#ffcc3333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name"
        android:layout_alignBottom="@+id/price"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/price"
        android:textColor="#ff999999"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="30人付款" />

</RelativeLayout>
